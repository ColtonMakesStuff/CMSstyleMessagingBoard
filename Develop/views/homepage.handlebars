      <h2>{{title}}</h2>
      <h3>{{user.name}}</h3>
      <h4>{{body}}</h4>
      <h4>{{user.email}}</h4>

    </div> 
    
    <section>
      <h2>Comments</h2>
{{#each post_comments}}
<div class="comment">
  <h3>{{this.user.name}}</h3>
  <h4>{{this.body}}</h4>
  
</div>
{{/each}}


    </section>

    <form class="commentForm">
      <label for="commentInput">Add a new comment:</label>
      <input type="text" id="commentInput" />
      <button type="submit">Add Comment</button>
    </form>
  </section>
{{/each}}


